<%- model_class = PrivacyTag.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:content) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @privacy_tags.each do |privacy_tag| %>
      <tr>
          <td><%= link_to privacy_tag.content, indicators_path(:q=>{:privacy_tag_id_eq => privacy_tag.id}), :class => privacy_tag.PrivacyColorClass %>
              <span class="badge"><%= privacy_tag.indicators.count %></span></td>
        <td><%= privacy_tag.description %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_privacy_tag_path(privacy_tag), :class => 'btn btn-mini' %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_privacy_tag_path,
            :class => 'btn btn-primary' %>
